<!DOCTYPE html>
<html lang="en" ng-app="wordImages">
  <head>
    <title>Word to Images</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet" type="text/css">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.20/angular.min.js"></script>
    <script src="js/xml2json.min.js"></script>
    <script src="js/app.js"></script>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div ng-controller="SearchCtrl as search">
      <form ng-submit="searchTerm()" style="margin-top:30px">
        <h3>Search any term:</h3>

        <div class="form-group">
          <input type="search" class="form-control" ng-model="query">
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
      </form> 

      <div class="images" ng-show="word.relatedImages.length">
        <h3>Images:</h3>
        <div class="col-md-4" ng-repeat='image in word.relatedImages'>
          <img ng-src='{{image.link}}' title="{{image.title}}" class="img-thumbnail">
        </div>
      </div>

      <div class="related" ng-show="word.relatedWords.length" class="col-md-1">
        <h3>Related Terms:</h3>
        <ul>
          <li ng-repeat="word in word.relatedWords" class="list-group-item">
            {{word}}
          </li>
        </ul>
      </div>

    </div>

    

  </body>
</html>